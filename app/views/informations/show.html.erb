<div class= "information_show">
  <%= search_form_for(@q, url: search_informations_path) do |f| %>
    <div class= "search_boxes">
      <div class= "search_text">
        <div class= "search_text_secondary">
          <%= link_to "ビジグル" ,root_path , class: "root_url"%>
        </div>
        <div class= "search_text_boxes">
          <%= f.search_field :store_name_or_genre_name, placeholder: "キーワード     例：焼肉", class: "text_keyword"%>
          <%= f.search_field :city_or_address_or_place_name, placeholder: "エリア     例：東京", class: "area_keyword" %>
          <%= f.submit "検索", class: "search_submit_word" %>
        </div>
      </div>
    </div>
  <% end %>
  <div class= "informaton_show_content11111">
    <div class = "information_left_contents">
      <div class = "information_left_store_name">
        <%= @information.store_name %>
      </div>
      <div class = "information_left_images">
        画像のスライド
      </div>
      <div class = "information_left_explanation">
        <p><i class="fas fa-feather-alt"></i>お店からの一言！</p>
        <%= @information.explanation %>
      </div>
      <div class = "information_left_chart">
        <p><i class="fa fa-pie-chart"></i>評価</p>
        <div class ="charts">
          <%= image_tag 'comingsoon.png', alt: 'テスト画像', class: "coming_soon-image" %>
          <%= image_tag 'chart.jpeg', alt: 'テスト画像', class: "chart-image" %>
          <div class ="chart-date">
            データが入るよん
          </div>
        </div>
      </div>
      <div class ="information_left_details">
        <div class= "information_kihon">
          <p><i class="far fa-file-alt"></i>店舗情報</p>
          <table>
            <tr >
              <th>店名</th>
              <td><%= @information.store_name %></td>
            </tr>
            <tr>
              <th>ジャンル</th>
              <td><%= @information.genre.parent.name %>/<%= @information.genre.name %></td>
            </tr>
            <tr>
              <th>お問い合わせ</th>
              <td><%= @information.tel %></td>
            </tr>
            <tr>
              <th>予約可否</th>
              <td><%= @information.booking.name %></td>
            </tr>
            <tr>
              <th>住所</th>
              <td><%= @information.store.postal_code %> <%= @information.place.parent.name %><%= @information.city %><%= @information.address %></td>
            </tr>
            <tr>
              <th>交通手段</th>
              <td><%= @information.transportation %></td>
            </tr>
            <tr>
              <th>営業時間</th>
              <td><%= @information.opening_time.strftime("%H:%M") %>~<%= @information.closing_time.strftime("%H:%M") %></td>
            </tr>
            <tr>
              <th>定休日</th>
              <td><%= @information.holiday.name %></td>
            </tr>
            <tr>
              <th>予算</th>
              <td><%= @information.budget.name %></td>
            </tr>
            <tr>
              <th>支払い方法</th>
              <td><% @information.payments.each do |payment| %>
                    <%= payment.name %>
                  /<% end %></td>
            </tr>
            <tr>
              <th>喫煙・禁煙</th>
              <td><%= @information.tobacco.name %></td>
            </tr>
            <tr>
              <th>駐車場の有無</th>
              <td><%= @information.parking.name %>/</td>
            </tr>
            <tr>
              <th>サービス</th>
              <td><% @information.services.each do |service| %>
                    <%= service.name %>
                  /<% end %></td>
            </tr>
            <tr>
              <th>空間</th>
              <td><% @information.spaces.each do |space| %>
                    <%= space.name %>
                  /<% end %></td>
            </tr>
            <tr>
              <th>設備</th>
              <td><% @information.rooms.each do |room| %>
                    <%= room.name %>
                  <% end %></td>
            </tr>
            <tr>
              <th>ロケーション</th>
              <td><% @information.locations.each do |location| %>
                    <%= location.name %>
                  <% end %></td>
            </tr>
            <tr>
              <th>店内音量</th>
              <td><%= @information.volume.name %></td>
            </tr>
            <tr>
              <th>店内BGM</th>
              <td><% @information.musics.each do |music| %>
                    <%= music.name %>
                  <% end %></td>
            </tr>
            <tr>
              <th>店内照明</th>
              <td><%= @information.light.name %></td>
            </tr>
          </table>
        </div>
      </div>
    </div>
    <div class ="information_right_contents">
      <%= link_to "#", class: "tel_link" do %>
        <div class ="information_right_tel">
          <div class = "information_right_tel_icon"><i class="fa fa-phone"></i></div>
          <div class = "information_right_tel_number">電話予約はこちらから<br><%= @information.tel %></div>
        </div>
      <% end %>
      <div class = "information_right_calender">
          <div class = "informaton_show_content_calender">
          <%= month_calendar events: @reservations do |date, reservations| %>
            <%= date.day %>
            <% if reservations.length >= 2 %>
              <div class= "yoyakukanou">
                ◎
              </div>
            <% elsif reservations.length == 1%>
              <div class= "yoyakukanou">
                △
              </div>
            <% else %>
              <div class= "yoyakukanou">
              ✖︎
              </div>
            <% end %>
            <div class= "hidden" style="display:none;" >
              <% reservations.each do |reservation| %>
                <% if reservation.name == nil && user_signed_in? %>
                  <%= link_to edit_users_reservation_path(reservation.id) do %>
                    <%= reservation.start_time.strftime("%H:%M") %>
                    <div class= "yoyakukanou">
                    ◎
                    </div>
                  <% end %>
                <% end %>
                <% if reservation.name == nil && store_signed_in? && reservation.information.store_id == current_store.id %>
                  <%= link_to edit_informations_reservation_path(reservation.id) do %>
                    <%= reservation.start_time.strftime("%H:%M") %>
                    <div class= "yoyakukanou">
                    ◎ 編集
                    </div>
                  <% end %>
                <% end %>
              <% end %>
            </div>
          <% end %>
      </div>
    </div>
  <div>
</div>