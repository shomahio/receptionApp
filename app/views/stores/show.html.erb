<div class="tabs">
  <div class= "search_text_secondary">
    <%= link_to "ビジグル" ,root_path , class: "root_url"%>
  </div>
  <input type='radio' id='company-page' name='tab-item'checked>
  <%= link_to '店舗情報',store_path(current_store.id), class: 'tab-item'%>
  <input type='radio' id='staff-page' name='tab-item'>
  <%= link_to '予約一覧', informations_reservations_path(@information.id), method: :get, class: 'tab-item' %>
  <input type='radio' id='index-page' name='tab-item'>
  <%= link_to '領収書一覧', informations_reservation_receipts_path(@information.id), method: :get, class: 'tab-item' %>
</div>
<div class= "informaton_show_content">
  <div class= "information_img_calender_contents">
    <div class= "top_img_box">
      <%= image_tag @information.image, class: "information-show-box-img" %>
    </div>
  </div>
  <div class= "information_kihon">
    <table>
      <tr >
        <th>店名</th>
        <td><%= @information.store_name %></td>
      </tr>
      <tr>
        <th>ジャンル</th>
        <td><%= @information.genre.parent.name %>/<%= @information.genre.name %></td>
      </tr>
      <tr>
        <th>お問い合わせ</th>
        <td><%= @information.tel %></td>
      </tr>
      <tr>
        <th>予約可否</th>
        <td><%= @information.booking.name %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @information.store.postal_code %> <%= @information.place.parent.name %><%= @information.city %><%= @information.address %></td>
      </tr>
      <tr>
        <th>交通手段</th>
        <td><%= @information.transportation %></td>
      </tr>
      <tr>
        <th>営業時間</th>
        <td><%= @information.opening_time.strftime("%H:%M") %>~<%= @information.closing_time.strftime("%H:%M") %></td>
      </tr>
      <tr>
        <th>定休日</th>
        <td><%= @information.holiday.name %></td>
      </tr>
      <tr>
        <th>予算</th>
        <td><%= @information.budget.name %></td>
      </tr>
      <tr>
        <th>支払い方法</th>
        <td><% @information.payments.each do |payment| %>
              <%= payment.name %>
            /<% end %></td>
      </tr>
      <tr>
        <th>喫煙・禁煙</th>
        <td><%= @information.tobacco.name %></td>
      </tr>
      <tr>
        <th>駐車場の有無</th>
        <td><%= @information.parking.name %>/</td>
      </tr>
      <tr>
        <th>サービス</th>
        <td><% @information.services.each do |service| %>
              <%= service.name %>
            /<% end %></td>
      </tr>
      <tr>
        <th>空間</th>
        <td><% @information.spaces.each do |space| %>
              <%= space.name %>
            /<% end %></td>
      </tr>
      <tr>
        <th>設備</th>
        <td><% @information.rooms.each do |room| %>
              <%= room.name %>
            <% end %></td>
      </tr>
      <tr>
        <th>ロケーション</th>
        <td><% @information.locations.each do |location| %>
              <%= location.name %>
            <% end %></td>
      </tr>
      <tr>
        <th>店内音量</th>
        <td><%= @information.volume.name %></td>
      </tr>
      <tr>
        <th>店内BGM</th>
        <td><% @information.musics.each do |music| %>
              <%= music.name %>
            <% end %></td>
      </tr>
      <tr>
        <th>店内照明</th>
        <td><%= @information.light.name %></td>
      </tr>
    </table>
  </div>
</div>
